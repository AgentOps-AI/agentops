# AgentOps Dashboard Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project Settings (Public)
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Supabase Service Role (Server-side only)
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
SUPABASE_PROJECT_ID="your-project-id"

# =============================================================================
# APPLICATION URLS
# =============================================================================

# API Backend URL
NEXT_PUBLIC_API_URL="http://localhost:8000"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# =============================================================================
# STRIPE BILLING CONFIGURATION
# =============================================================================

# Stripe Public Key (safe to expose in frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Stripe Secret Keys (server-side only)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
NEXT_PUBLIC_SENTRY_ORG="your-sentry-org"
NEXT_PUBLIC_SENTRY_PROJECT="your-sentry-project"
NEXT_PUBLIC_SENTRY_ENVIRONMENT="development"

# =============================================================================
# FEATURE FLAGS & CONFIGURATION
# =============================================================================

# Authentication Methods
NEXT_PUBLIC_SIGNIN_METHODS="email,oauth"

# Environment Type
NEXT_PUBLIC_ENVIRONMENT_TYPE="development"

# Feature Toggles
NEXT_PUBLIC_PLAYGROUND="true"
NEXT_PUBLIC_FALLBACK_API_KEY=""

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Uncomment and modify for production
# NEXT_PUBLIC_API_URL="https://api.yourdomain.com"
# NEXT_PUBLIC_APP_URL="https://yourdomain.com"
# NEXT_PUBLIC_SITE_URL="https://yourdomain.com"
# NEXT_PUBLIC_ENVIRONMENT_TYPE="production"
# NEXT_PUBLIC_PLAYGROUND="false"
# NEXT_PUBLIC_SENTRY_ENVIRONMENT="production"
